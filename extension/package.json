{
  "name": "raas-integrated",
  "displayName": "RaaS - AI Code Completion & Chat",
  "description": "AI-powered code completion and chat using your RaaS API",
  "version": "1.0.0",
  "engines": { 
    "vscode": ">=1.85.0" 
  },
  "categories": ["Other"],
  "icon": "media/chat.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onViewContainer:raasChat",
    "onView:raasChatView",
    "onLanguage:*",
    "onCommand:raas.openChat"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "raasChat",
          "title": "RaaS Chat",
          "icon": "media/chat.svg"
        }
      ]
    },
    "views": {
      "raasChat": [
        { 
          "id": "raasChatView", 
          "name": "Ask RaaS",
          "type": "webview",
          "icon": "media/chat.svg"
        }
      ]
    },
    "commands": [
      { 
        "command": "raas.openChat", 
        "title": "Open RaaS Chat", 
        "category": "RaaS",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "raas.testCompletion",
        "title": "Test Code Completion",
        "category": "RaaS Debug"
      },
      {
        "command": "raas.checkHealth",
        "title": "Check API Health", 
        "category": "RaaS Debug"
      }
    ],
    "configuration": {
      "title": "RaaS",
      "properties": {
        "raas.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL (no trailing slash)"
        },
        "raas.chatPath": {
          "type": "string",
          "default": "/api/v1/chat/form",
          "description": "Chat endpoint path or absolute URL"
        },
        "raas.completionPath": {
          "type": "string",
          "default": "/api/v1/code-completion",
          "description": "Code-completion endpoint path or absolute URL"
        },
        "raas.timeout": { 
          "type": "number", 
          "default": 100000,
          "description": "Request timeout in milliseconds"
        },
        "raas.debounceMs": { 
          "type": "number", 
          "default": 500,
          "description": "Debounce delay for completions in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "build": "tsc -p .",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0"
  }
}